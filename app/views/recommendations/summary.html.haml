%h1 RecoFont
%h2 Font and type recommendations for &ldquo;COM 381 Web Application Development&rdquo;

%p#notice= notice

.info
  %p
    User:
    = @user.username
.info
  %p
    Team:
    = @team.project_name
.info
  %p
    Repository:
    = link_to( @team.github_repo.match('g.*$')[0], @team.github_repo )
.info
  %p
    Proposal:
    = link_to( @team.proposal.match('/([^/]*$)')[1], @team.proposal )

%p
  Recommendation:
  =  @recommendation.recommendation
%p
  Font stack:
  = @recommendation.font_stack
%p
  Pull request url:
  = @recommendation.pull_request_url

%h3 Examples
%ul
  - if !@examples.empty?
    - @examples.each do |example|
      %li
        = example.url.nil? ? 'none' : link_to( example.url , example.url)
        %ul
          %li
            = example.description.nil? ? example.recommendation_id : example.description

%nav
  = link_to( button_tag('Change or modify team'), '/change_teams' )
  = link_to( button_tag('Logout'), '/logout' )
