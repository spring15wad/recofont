%h1 Listing examples

%table
  %thead
    %tr
      %th Description
      %th Link
      %th Attachment
      %th Recommendation
      %th
      %th
      %th

  %tbody
    - @examples.each do |example|
      %tr
        %td= example.description
        %td= example.example_url.blank? ? 'None' : link_to(example.example_url.match('http[s]*://(.*[^/])/*')[0], example.example_url)
        %td= example.attachment.nil? ? 'none' : example.attachment.filename
        %td= example.recommendation_id
        %td= link_to 'Show', example
        %td= link_to 'Edit', edit_example_path(example)
        %td= link_to 'Destroy', example, :method => :delete, :data => { :confirm => 'Are you sure?' }
/       %td= link_to 'Download', item_download_path(example.file), disable_with: 'Downloading...'

%br

= link_to 'New Example', new_example_path
