= form_for @example do |f|
  - if @example.errors.any?
    #error_explanation
      %h2= "#{pluralize(@example.errors.count, "error")} prohibited this example from being saved:"
      %ul
        - @example.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :recommendation_id
    = f.number_field :recommendation_id
  .field
    = f.label :attachment_id
    = f.number_field :attachment_id
  .actions
    = f.submit 'Save'
