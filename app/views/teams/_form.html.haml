= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project_name
    = f.text_field :project_name
  .field
    = f.label :github_repo
    = f.text_field :github_repo
  .field
    = f.label :proposal
    = f.text_field :proposal
  .actions
    = f.submit 'Save'
